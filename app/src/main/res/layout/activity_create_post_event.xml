<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreatePostEvent"
    android:background="@color/hitam">

    <TextView
        android:id="@+id/kembali"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="88dp"
        android:layout_gravity="center"
        android:textColor="@color/putih"
        android:textSize="18sp"
        android:text="Kembali"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_marginTop="84dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/button_publikasikan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/rounded_btn_post">
            <TextView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Publikasikan"
                android:textColor="@color/hitam"
                android:textSize="18sp"/>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="104dp"
        android:layout_below="@id/kembali"
        android:layout_marginTop="32dp">
        <LinearLayout
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/postImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/shape_rounded_corner"
                android:visibility="gone"/>
            <EditText
                android:id="@+id/edittext_isipost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Apa yang Anda pikirkan?"
                android:textColorHint="@color/abu2_teks"
                android:textColor="@color/putih"
                android:layout_marginTop="8dp"
                android:background="@null"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/button_media"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_media"
            android:background="@drawable/rounded_btn_media"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

</RelativeLayout>